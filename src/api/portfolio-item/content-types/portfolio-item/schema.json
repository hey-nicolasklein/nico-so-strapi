{
    "kind": "collectionType",
    "collectionName": "portfolio_items",
    "info": {
        "singularName": "portfolio-item",
        "pluralName": "portfolio-items",
        "displayName": "Portfolio Item",
        "description": "Portfolio items and projects"
    },
    "options": {
        "draftAndPublish": true
    },
    "pluginOptions": {},
    "attributes": {
        "title": {
            "type": "string",
            "required": true
        },
        "subtitle": {
            "type": "string"
        },
        "image": {
            "type": "media",
            "multiple": false,
            "required": true,
            "allowedTypes": [
                "images"
            ]
        },
        "externalLink": {
            "type": "string"
        },
        "createdWith": {
            "type": "string"
        },
        "type": {
            "type": "enumeration",
            "enum": [
                "Artwork",
                "Music",
                "Movie",
                "Other"
            ],
            "required": true
        },
        "order": {
            "type": "integer",
            "default": 0,
            "required": true
        }
    }
}